<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="com.jernung.cordova.expansion-file"
        version="0.0.1">
    
    <name>Expansion File</name>

    <author>Joshua McFarland</author>
    <description>Cordova Expansion File Plugin</description>
    <keywords>cordova,expansion,file</keywords>
    
    <js-module src="www/expansion.js" name="expansion">
        <clobbers target="navigator.expansion" />
    </js-module>
    
    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Expansion" >
                <param name="android-package" value="com.jernung.cordova.expansionfile.Expansion"/>
            </feature>
        </config-file>
        
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="com.android.vending.CHECK_LICENSE" />
            <uses-permission android:name="android.permission.INTERNET" />
            <uses-permission android:name="android.permission.WAKE_LOCK" />
            <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
            <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>

        <source-file src="src/android/Expansion.java" target-dir="src/com/jernung/cordova/expansionfile" />
        
        <!-- google downloader library -->
        <source-file src="src/android/downloader/Constants.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/DownloadProgressInfo.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/DownloaderClientMarshaller.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/DownloaderServiceMarshaller.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/Helpers.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/IDownloaderClient.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/IDownloaderService.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/IStub.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/SystemFacade.java" target-dir="src/com/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/impl/AndroidHttpClient.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/CustomIntentService.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/CustomNotificationFactory.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/DownloadInfo.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/DownloadNotification.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/DownloadThread.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/DownloaderService.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/DownloadsDB.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/HttpDateTime.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/V14CustomNotification.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        <source-file src="src/android/downloader/impl/V3CustomNotification.java" target-dir="src/com/android/vending/expansion/downloader/impl" />
        
        <!-- google licensing library -->
        <source-file src="src/android/licensing/AESObfuscator.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/APKExpansionPolicy.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/DeviceLimiter.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/ILicenseResultListener.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/ILicensingService.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/LicenseChecker.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/LicenseCheckerCallback.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/LicenseValidator.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/NullDeviceLimiter.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/Obfuscator.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/Policy.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/PreferenceObfuscator.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/ResponseData.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/ServerManagedPolicy.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/StrictPolicy.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/ValidationException.java" target-dir="src/com/google/android/vending/licensing" />
        <source-file src="src/android/licensing/util/Base64.java" target-dir="src/com/google/android/vending/licensing/util" />
        <source-file src="src/android/licensing/util/Base64DecoderException.java" target-dir="src/com/google/android/vending/licensing/util" />
        
        <!-- google zip library -->
        <source-file src="src/android/zipfile/APEZProvider.java" target-dir="src/com/google/android/vending/zipfile" />
        <source-file src="src/android/zipfile/APKExpansionSupport.java" target-dir="src/com/google/android/vending/zipfile" />
        <source-file src="src/android/zipfile/ZipResourceFile.java" target-dir="src/com/google/android/vending/zipfile" />
    </platform>
        
</plugin>